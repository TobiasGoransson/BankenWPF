<UserControl x:Class="BankAppWPF.ShowUserInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankAppWPF"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="250">
    <StackPanel>
        <StackPanel >
            <TextBlock Height="20" x:Name ="contuserIDTextBlock" Text="User Id :" FontWeight="Bold" ></TextBlock>
            <TextBlock Height="20" x:Name ="contfristNameTextBlock" Text="First Name :" FontWeight="Bold"></TextBlock>
            <TextBlock Height="20" x:Name ="contlastNameTextBlock" Text="Last Name :" FontWeight="Bold"></TextBlock>
            <TextBlock Height="20" x:Name ="contemailTextBlock" Text="Email :" FontWeight="Bold"></TextBlock>
            <TextBlock Height="20" x:Name ="contadressTextBlock" Text="Adress :" FontWeight="Bold"></TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
